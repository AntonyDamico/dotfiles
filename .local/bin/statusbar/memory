#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs." ;;
esac

#free -h | awk '/^Mem:/ {print $3 "/" $2}'

# free -h | awk '/^Mem:/ {print $3}'

used=$(free -h | awk '/^Mem:/ {print $3}')

number=$(free | awk '/^Mem:/ {print $3}')

# if the memory usage is less than 4G then exit
[ "$number" -lt 4000000 ] && exit

unit=${used//[[:digit:]]/}

[ "$unit" = ',Gi' ] && echo "$used" || exit
